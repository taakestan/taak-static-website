
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.h4
    | #{ "ارائه شده توسط " }
    mixin author(page.metadata.author)

    | #{ " در تاریخ " + moment.utc(page.metadata.date).format('MMMM DD, YYYY')}

block content
  article.details
    section.content!= typogr(page.html).typogrify()
    p.downloads
      a.btn.btn-primary(href='#') دانلود وبینار
      &nbsp;
      a.btn.btn-success(href='#') دانلود پاورپوینت
      &nbsp;
      a.btn.btn-warning(href='#') دانلود سورس

block prepend footer
  div.nav
    a.btn.btn-default(href=contents.index.url) لیست تمام وبینارها