doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='stylesheet', href=contents.assets.css['bootstrap.min.css'].url)
      link(rel='stylesheet', href=contents.assets.css['bootstrap-rtl.min.css'].url)
      link(rel='stylesheet', href=contents.assets.css['main.css'].url)
  body(class=bodyclass)
    div.nav.navbar.navbar-fixed-top.navbar-inverse
        .container
          .navbar-brand
            img.logo(src='/assets/img/sample-icon.png')
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/') خانه
    div.container
        header.header
            block header
              div.jumbotron
                h1
                  a(href=locals.url)= locals.name
                p.description= locals.description        
        div.col-12
          div#content
              div.row
                block content
        footer.panel-footer
          div
            block footer
              //section.about
              //  !=contents['about.md'].html
              section.copy
                p &copy; تمامی حقوق این سایت برای ماست... #{ new Date().getFullYear() } | #{ locals.owner }
                  a(href='/')
    script(src='http://code.jquery.com/jquery-latest.min.js')
    script(src=contents.assets.js['bootstrap.min.js'].url)
